    <script src="~/Scripts/CustomScripts/AjaxControl.js"></script>

    <script src="~/Scripts/bootbox.min.js"></script>
    @RenderSection("scripts", required: false)
<script>
    jQuery(document).ready(function () {
        $("#tree").fancytree({
            icons: false, // Display node icons.
            clickFolderMode: 2,
            click: function (event, data) {
                if (data.node.data.href === "#" || data.node.data.href === undefined) {
                    return;
                }
                if (data.node.data.target==="_blank") {
                    window.open(data.node.data.href, '_blank');
                    return;
                } if (data.node.data.href ==="/UserAccount/Account") {
                    window.location.assign(data.node.data.href);
                    return;
                }
               
               // window.open(data.node.data.href);
                    LoadPage(data.node.data.href, this);

            }
            // 1:activate, 2:expand, 3:activate and expand, 4:activate (dblclick expands)
        });
    });
    $('.demo-auto').colorpicker();
    $(function () {
        // Set up timeline scrolling functionality
        $('.timeline-con').slimScroll({ height: 565, color: '#000000', size: '3px', touchScrollStep: 100, distance: '0' });
        $('.timeline').css('min-height', '565px');

        // Demo status updates and timeline functionality
        var statusUpdate = $('#status-update');
        var statusUpdateVal = '';

        $('#accept-request').click(function () {
            $(this).replaceWith('<span class="label label-success">Awesome, you became friends!');
        });





    });
</script>
</body>
